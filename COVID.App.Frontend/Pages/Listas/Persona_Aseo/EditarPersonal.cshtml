@page
@model COVID.App.Frontend.Pages.EditarPersonalModel
@{
}
<h1>Editar Personal de Aseo</h1>
<form method="post">
    <input type="hidden" asp-for="personal_aseo.id">
    <div class="form-group">
        <label asp-for="personal_aseo.nombre">Nombre:</label>
        <input asp-for="personal_aseo.nombre" class="form-control" size"60" style="width:500px">
        <span class="text_danger" asp-validation.for="personal_aseo.nombre"></span>
    <div class="form-group">
        <label asp-for="personal_aseo.apellido">Apellido:</label>
        <input asp-for="personal_aseo.apellido" class="form-control" size"60" style="width:500px">
    </div>
        <label asp-for="personal_aseo.edad">Edad:</label>
        <input asp-for="personal_aseo.edad" class="form-control" size"60" style="width:500px">
    <div class="form-group">
        <label asp-for="personal_aseo.estado">Estado:</label>
        <input asp-for="personal_aseo.estado" class="form-control" size"60" style="width:500px">
    </div>
    <div class="form-group">
        <label asp-for="personal_aseo.turno">Turno:</label>
        <input asp-for="personal_aseo.turno" class="form-control" size"60" style="width:500px">
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-page="/Listas/Persona_Aseo/Personal" class="btn btn-primary">Gestor de Personal de Aseo</a>
    <a class="btn btn-primary table-btn" asp-area="" asp-page="/Index">
        <i class="fas fa-home">Inicio</i>
    </a>
</form>