@page
@model COVID.App.Frontend.Pages.EstudiantesModel
@{
}
<br>
<h1>Gestor de Estudiantes</h1>

<h2>Lista de Estudiantes</h2>
<table class="table">
    <tr>
            <td><b>Nombre</b></td>
            <td><b>Apellidos</b></td>
            <td><b>Edad</b></td>
            <td><b>Estado COVID</b></td>
    </tr>
    @foreach(var estudiante in Model.Estudiantes)
    {
        <tr>
            <td>@estudiante.nombre</td>
            <td>@estudiante.apellido</td>
            <td>@estudiante.edad</td>
            <td>@estudiante.estado</td>
            <td>
                <a class="btn btn-primary table-btn"  asp-page="/Listas/Estudiante/DetallesEstudiantes" asp-route-idestudiante="@estudiante.id">
                    <i class="fas fa-info-circle fa-lg" aria-hidden="true"></i>
                    Detalle
                </a>
            </td>
            <td>
                <a class="btn btn-secondary table-btn"  asp-page="/Listas/Estudiante/EditEstudiantes" asp-route-idestudiante="@estudiante.id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>
                    Editar
                </a>
            </td>
            <td>
                <a class="btn btn-danger table-btn"  asp-page="/Listas/Estudiante/EliminarEstudiantes" asp-route-idestudiante="@estudiante.id">
                    <i class="fas fa-book-dead fa-lg" aria-hidden="true"></i>
                    Eliminar
                </a>
            </td>
            
        </tr>
    }
</table>

<a asp-page="/Listas/Estudiante/EditEstudiantes" class="btn btn-primary">Adicionar Estudiante</a>
<a class="btn btn-primary table-btn" asp-area="" asp-page="/Index">
    <i class="fas fa-home">Inicio</i>
</a>