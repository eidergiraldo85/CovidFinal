@page
@model COVID.App.Frontend.Pages.DirectivoModel
@{
}
<br>
<h1>Gestor de Directivos</h1>

<h2>Lista de Directivos</h2>
<table class="table">
    <tr>
            <td><b>Nombre</b></td>
            <td><b>Apellidos</b></td>
            <td><b>Edad</b></td>
            <td><b>Estado COVID</b></td>
    </tr>
    @foreach(var directivo in Model.Directivos)
    {
        <tr>
            <td>@directivo.nombre</td>
            <td>@directivo.apellido</td>
            <td>@directivo.edad</td>
            <td>@directivo.estado</td>
            <td>
                <a class="btn btn-primary table-btn"  asp-page="/Listas/Directivo/DetallesDirectivo" asp-route-iddirectivo="@directivo.id">
                    <i class="fas fa-info-circle fa-lg" aria-hidden="true"></i>
                    Detalle
                </a>
            </td>
            <td>
                <a class="btn btn-secondary table-btn"  asp-page="/Listas/Directivo/EditarDirectivo" asp-route-iddirectivo="@directivo.id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>
                    Editar
                </a>
            </td>
            <td>
                <a class="btn btn-danger table-btn"  asp-page="/Listas/Directivo/EliminarDirectivo" asp-route-iddirectivo="@directivo.id">
                    <i class="fas fa-book-dead fa-lg" aria-hidden="true"></i>
                    Eliminar
                </a>
            </td>
            
        </tr>
    }
</table>

<a asp-page="/Listas/Directivo/EditarDirectivo" class="btn btn-primary">Adicionar Directivo</a>
<a class="btn btn-primary table-btn" asp-area="" asp-page="/Index">
    <i class="fas fa-home">Inicio</i>
</a>